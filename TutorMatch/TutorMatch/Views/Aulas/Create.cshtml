@model TutorMatch.Models.Aula
@using System.Security.Claims

@{
	ViewData["Title"] = "Criar Aula";
}

<h2>Criar Aula</h2>

<form asp-action="Create" method="post" novalidate>
	<div class="form-group">
		<label asp-for="Data" class="control-label" id="labelData">Data da Aula</label>
		<input asp-for="Data" class="form-control" aria-describedby="ajudaData" aria-labelledby="labelData" aria-required="true" />
		<span asp-validation-for="Data" class="text-danger" role="alert"></span>
		<small id="ajudaData" class="form-text text-muted">Insira a data da aula no formato adequado.</small>
	</div>

	<div class="form-group">
		<label asp-for="Hora" class="control-label" id="labelHora">Hora da Aula</label>
		<input asp-for="Hora" class="form-control" aria-describedby="ajudaHora" aria-labelledby="labelHora" aria-required="true" />
		<span asp-validation-for="Hora" class="text-danger" role="alert"></span>
		<small id="ajudaHora" class="form-text text-muted">Informe a hora da aula.</small>
	</div>

	<div class="form-group">
		<label asp-for="NomeDaAula" class="control-label" id="labelNomeDaAula">Nome da Aula</label>
		<input asp-for="NomeDaAula" class="form-control" aria-describedby="ajudaNomeDaAula" aria-labelledby="labelNomeDaAula" aria-required="true" />
		<span asp-validation-for="NomeDaAula" class="text-danger" role="alert"></span>
		<small id="ajudaNomeDaAula" class="form-text text-muted">Digite um nome descritivo para a aula.</small>
	</div>

	<div class="form-group">
		<label for="ProfessorId" class="control-label" id="labelProfessor">Professor Responsável</label>
		<input type="text" class="form-control" id="Professor" value="@ViewBag.ProfessorName" readonly aria-labelledby="labelProfessor" aria-required="true" />
		<input type="hidden" asp-for="ProfessorId" value="@ViewBag.ProfessorId" />
		<span asp-validation-for="ProfessorId" class="text-danger" role="alert"></span>
		<small class="form-text text-muted">O professor responsável pela aula será você.</small>
	</div>

	<div class="form-group">
		<label asp-for="LinkDaAula" class="control-label" id="labelLinkDaAula">Link da Aula</label>
		<input asp-for="LinkDaAula" class="form-control" aria-describedby="ajudaLinkDaAula" aria-labelledby="labelLinkDaAula" aria-required="true" />
		<span asp-validation-for="LinkDaAula" class="text-danger" role="alert"></span>
		<small id="ajudaLinkDaAula" class="form-text text-muted">Forneça um link acessível para a aula.</small>
	</div>

	<div class="form-group mt-4">
		<button type="submit" class="btn btn-primary">Criar</button>
	</div>
</form>

<div>
	<a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

<style>
	/* Estilização do Skip Link */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		border: 0;
	}

	.sr-only-focusable:focus {
		position: static;
		width: auto;
		height: auto;
		margin: 0;
		padding: 10px;
		background-color: #007bff;
		color: white;
		text-decoration: none;
		display: block;
	}
</style>
