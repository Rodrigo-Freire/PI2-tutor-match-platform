@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
		{
		var user = await UserManager.GetUserAsync(User);
		<a class="nav-link text-dark" asp-controller="Account" asp-action="Manage" title="Manage">
			Olá @user.Name!
		</a>
		<li class="nav-item">
			<form class="form-inline" asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
		}
	else
		{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Cadastre-se</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
		</li>
		}
</ul>
