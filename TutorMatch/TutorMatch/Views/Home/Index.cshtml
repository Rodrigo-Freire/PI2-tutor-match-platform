    /* Adiciona espaçamento extra acima e abaixo das seções */
    .spacing-header {
        margin-top: 20px;
    }

    .section-spacing {
        margin-bottom: 20px;
    }

    .footer-spacing {
        margin-top: 50px;
    }
</style>
