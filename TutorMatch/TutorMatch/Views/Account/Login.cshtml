@model TutorMatch.Models.LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<header>
	<h1 id="main-heading">@ViewData["Title"]</h1>
</header>

@if (TempData["ErrorMessage"] != null)
	{
	<div class="alert alert-danger" role="alert">
		@TempData["ErrorMessage"]
	</div>
	}

<main role="main" aria-labelledby="main-heading">
	<form asp-action="Login" method="post">
		<fieldset>
			<legend class="sr-only">Formulário de login</legend>

			<div asp-validation-summary="All" class="text-danger"></div> <!-- Exibe todos os erros do ModelState -->

			<div class="form-group">
				<label asp-for="Email" class="form-label">E-mail</label>
				<input asp-for="Email" class="form-control" aria-required="true" />
				<small class="form-text text-muted">Digite seu e-mail</small> <!-- Instrução adicional -->
				<span asp-validation-for="Email" class="text-danger" aria-live="polite"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password" class="form-label">Senha</label>
				<input asp-for="Password" class="form-control" type="password" aria-required="true" />
				<small class="form-text text-muted">Digite sua senha</small> <!-- Instrução adicional -->
				<span asp-validation-for="Password" class="text-danger" aria-live="polite"></span>
			</div>

			<div class="form-group form-check">
				<input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
				<label asp-for="RememberMe" class="form-check-label">Lembrar-me</label>
			</div>

			<!-- Botão com margem para facilitar a navegação -->
			<button type="submit" class="btn btn-primary mt-3" aria-label="Clique para fazer login">Entrar</button>
		</fieldset>
	</form>

	<div>
		<p class="text-muted">Não tem uma conta? <a asp-controller="Account" asp-action="Register" aria-label="Criar uma conta">Cadastre-se aqui</a>.</p>
	</div>
</main>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}