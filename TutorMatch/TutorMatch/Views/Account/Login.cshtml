@model TutorMatch.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Login" method="post">
	<div class="form-group">
		<label asp-for="Email" class="form-label">E-mail</label>
		<input asp-for="Email" class="form-control" aria-required="true" aria-label="E-mail" />
		<span asp-validation-for="Email" class="text-danger" aria-live="polite"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password" class="form-label">Senha</label>
		<input asp-for="Password" class="form-control" type="password" aria-required="true" aria-label="Senha" />
		<span asp-validation-for="Password" class="text-danger" aria-live="polite"></span>
	</div>
	<div class="form-group form-check">
		<input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
		<label asp-for="RememberMe" class="form-check-label" aria-label="Lembrar-me">Lembrar-me</label>
	</div>
	<button type="submit" class="btn btn-primary">Entrar</button>
</form>

<div>
	<p>Não tem uma conta? <a asp-controller="Account" asp-action="Register">Cadastre-se aqui</a>.</p>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
